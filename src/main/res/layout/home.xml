<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:orientation="vertical">
       <!-- android:background="#fefefe" -->
      <!--body wrapper-->
      <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <!-- top-bar -->
            <LinearLayout
              android:id="@+id/home_top_layout"
              android:layout_width="fill_parent"
              android:layout_height="50dp"
              android:background="@drawable/nav_top_bar"
              android:layout_alignParentTop="true">
              <TextView 
                android:id="@+id/textviewasd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="tuya"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
            </LinearLayout>

            <!-- content -->
            <LinearLayout
              android:id="@+id/home_content_layout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_above="@+id/home_bottom_layout"
              android:layout_below="@+id/home_top_layout"
              android:orientation="vertical">

              <ListView
                android:id="@+id/home_dynamic_state_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
            </LinearLayout>

            <!-- bottom bar -->
            <LinearLayout
              android:id="@+id/home_bottom_layout"
              android:layout_width="fill_parent"
              android:background="@drawable/nav_bottom_bar"
              android:layout_height="50dp"
              android:layout_alignParentBottom="true"
              android:layout_weight="1">
              <!--nav-home-->
              <RelativeLayout
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1">
                <!-- icon -->
                <ImageView
                  android:id="@+id/home_bottom_icon_home"
                  android:layout_width="30dp"
                  android:layout_height="wrap_content"
                  android:src="@drawable/icon_home"
                  android:layout_alignParentTop="true"/>
                <TextView
                  android:id="@+id/home_bottom_text_home"
                  android:text="Home"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="4dp"
                  android:layout_alignParentBottom="true"/>
              </RelativeLayout>
              <!-- nav-contacts -->
              <RelativeLayout
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1">
                <!-- icon -->
                <ImageView
                  android:id="@+id/home_bottom_icon_home"
                  android:src="@drawable/icon_contact"
                  android:layout_width="30dp"
                  android:layout_height="wrap_content"
                  android:layout_alignParentTop="true"/>
                <TextView
                  android:id="@+id/home_bottom_text_home"
                  android:text="Contacts"
                  android:layout_width="wrap_content"
                  android:layout_marginBottom="4dp"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"/>
              </RelativeLayout>
              <!--nav-like-->
              <RelativeLayout
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1">
                <!-- icon -->
                <ImageView
                  android:id="@+id/home_bottom_icon_home"
                  android:layout_width="30dp"
                  android:src="@drawable/icon_like"
                  android:layout_height="wrap_content"
                  android:layout_alignParentTop="true"/>
                <TextView
                  android:id="@+id/home_bottom_text_home"
                  android:text="Like"
                  android:layout_marginBottom="4dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"/>
              </RelativeLayout>
              <!--nav-Setting-->
              <RelativeLayout
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1">
                <!-- icon -->
                <ImageView
                  android:id="@+id/home_bottom_icon_home"
                  android:src="@drawable/icon_setting"
                  android:layout_width="30dp"
                  android:layout_height="wrap_content"
                  android:layout_alignParentTop="true"/>
                <TextView
                  android:id="@+id/home_bottom_text_home"
                  android:text="Setting"
                  android:layout_marginBottom="4dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"/>
              </RelativeLayout>
            </LinearLayout>
      </RelativeLayout>
</LinearLayout>